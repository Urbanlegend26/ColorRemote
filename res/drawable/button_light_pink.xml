<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
	    <shape>
	        <solid 
	            android:color="@color/light_pink_color1" />
			<stroke 
			    android:width="1dp" 
			    android:color="@color/light_pink_color2" />
			<corners 
			    android:radius="16dp" />
			<padding 
			    android:left="10dp" 
			    android:top="10dp" 
			    android:right="10dp" 
			    android:bottom="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient 
				android:startColor="@color/light_pink_color1" 
				android:endColor="@color/light_pink_color2"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="@color/light_pink_color2" />
			<corners
				android:radius="16dp" />
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
</selector>